{
  "manifest_version": 3,
  "name": "Site Limiter",
  "version": "2.4",
  "description": "Limit time spent on specified websites",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.demorgen.be/*",
    "*://*.facebook.com/*",
    "*://*.lichess.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

